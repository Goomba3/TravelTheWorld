<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
   

      <property name = "hibernate.dialect">
         org.hibernate.dialect.MySQLDialect
      </property>
      
      <property name = "hibernate.connection.driver_class">
		org.mariadb.jdbc.Driver
      </property>
      
      <property name = "hibernate.connection.url">
		jdbc:mariadb://localhost:3306/TravelTheWorld
      </property>
      
      <property name = "hibernate.connection.username">
         TravelTheWorld
      </property>
      
      <property name = "hibernate.connection.password">
         TravelTheWorld
      </property>
      
      <mapping class = "classes.User"/>
      <mapping class = "classes.Ville"/>
      <mapping class = "classes.ParcDisney"/>
      <mapping class = "classes.Station"/>
      <mapping class = "classes.Aeroport"/>
      <mapping class = "classes.Gare"/>
      <mapping class = "classes.MoyenTransport"/>
      <mapping class = "classes.Train"/>
      <mapping class = "classes.Avion"/>
      <mapping class = "classes.Trajet"/>
      <mapping class = "classes.Voyage"/>
      <mapping class = "classes.ParcVisite"/>
      
   </session-factory>
</hibernate-configuration>